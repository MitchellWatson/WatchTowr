<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#9C27B0" /> <!-- Background color when pressed -->
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Background color when selected -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#4CAF50" /> <!-- Default background color -->
        </shape>
    </item>
</selector>
