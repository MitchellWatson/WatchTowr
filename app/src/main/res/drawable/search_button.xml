<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="@color/dark_blue" /> <!-- Set the background color to blue -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="@color/mid_blue" /> <!-- Set the default background color to a different shade of blue -->
        </shape>
    </item>
</selector>