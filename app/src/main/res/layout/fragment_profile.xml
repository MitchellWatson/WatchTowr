<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFrag"
    android:layout_margin="15dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:text="Profile"
        android:id="@+id/profile"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/palanquinbold"
        android:textSize="30sp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="237dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/popUp"
        android:textColor="@color/success"
        android:fontFamily="@font/palanquinbold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editLayout"/>

    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profile"
        android:layout_marginBottom="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/occupationEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/post_input"
            android:fontFamily="@font/palanquinmedium"
            android:hint="Occupation"
            android:paddingLeft="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ageEdit"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:background="@drawable/post_input"
            android:fontFamily="@font/palanquinmedium"
            android:hint="Age" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="93dp"
        android:layout_height="50dp"
        android:background="@drawable/save_edit"
        android:fontFamily="@font/palanquinbold"
        android:textColor="@color/white"
        android:layout_below="@id/editLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="217dp"
        android:layout_height="51dp"
        android:text="Your Job Alerts"
        android:id="@+id/jobAlertsText"
        android:textColor="@color/text_color"
        android:fontFamily="@font/palanquinbold"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/save"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobAlertsView"
        android:layout_width="409dp"
        android:layout_height="228dp"
        android:layout_below="@id/jobAlertsText"
        android:layout_marginBottom="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signout"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:background="@drawable/signout"
        android:fontFamily="@font/palanquinbold"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/jobAlertsView"
        />



</RelativeLayout>