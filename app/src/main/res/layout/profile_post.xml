<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Minimized content -->
        <TextView
            android:id="@+id/companyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/baseline_store_24"
            android:text="Company"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:drawablePadding="5sp"
            android:layout_toStartOf="@+id/dateTextView"
            android:fontFamily="@font/palanquinbold" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:fontFamily="@font/palanquinregular"
            android:layout_alignParentEnd="true"
            android:text="Date" />

        <TextView
            android:id="@+id/positionTextView"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/palanquinmedium"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyTextView"
            android:drawablePadding="5sp"
            android:drawableLeft="@drawable/baseline_business_center_24"
            android:text="Position" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_button"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/palanquinbold"
            android:text="Delete"
            android:layout_alignParentBottom="true"
            android:background="@drawable/delete_button"
            android:textColor="@color/white" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
