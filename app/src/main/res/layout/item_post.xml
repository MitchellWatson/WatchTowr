<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Minimized content -->
        <TextView
            android:id="@+id/companyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/baseline_store_24"
            android:text="Company"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:drawablePadding="5sp"
            android:layout_toStartOf="@+id/dateTextView"
            android:fontFamily="@font/palanquinbold" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:fontFamily="@font/palanquinregular"
            android:layout_alignParentEnd="true"
            android:text="Date" />

        <TextView
            android:id="@+id/positionTextView"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/palanquinmedium"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyTextView"
            android:drawablePadding="5sp"
            android:drawableLeft="@drawable/baseline_business_center_24"
            android:text="Position" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/buttonReputation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/baseline_arrow_circle_up_24" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/reputationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="16dp"
                android:fontFamily="@font/palanquinbold"
                android:text="Reputation"
                />

        </LinearLayout>

        <!-- Expanded content -->
        <LinearLayout
            android:id="@+id/expandedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/positionTextView"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/palanquinregular"
                android:textColor="@color/grey"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:text="Location" />

            <TextView
                android:id="@+id/urlTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/palanquinregular"
                android:textColor="@color/grey"
                android:drawableLeft="@drawable/baseline_link_24"
                android:text="URL" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/palanquinregular"
                android:textColor="@color/grey"
                android:textSize="16dp"
                android:drawablePadding="5sp"
                android:drawableLeft="@drawable/baseline_description_24"
                android:text="Description" />

            <TextView
                android:id="@+id/posterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/palanquinregular"
                android:textColor="@color/grey"
                android:textSize="16dp"
                android:drawablePadding="5sp"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:text="Poster, Occupation"
                android:layout_toStartOf="@+id/buttonReputation"/>

        </LinearLayout>




    </RelativeLayout>
</androidx.cardview.widget.CardView>
